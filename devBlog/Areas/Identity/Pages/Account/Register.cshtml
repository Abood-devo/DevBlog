@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@* **************** MAIN CONTENT START **************** *@
<main>
	<section class="p-0 d-flex align-items-center position-relative overflow-hidden">
		<div class="container">
			<div class="row">
				@* left *@
				<div class="col-12 col-lg-6 d-md-flex align-items-center justify-content-center bg-primary bg-opacity-10 rounded-3 vh-lg-100">
					<div class="p-3 p-lg-5">
						@* Title *@
						<div class="text-center">
							<h2 class="fw-bold">Welcome to our Developers Blog</h2>
							<p class="mb-0 h6 fw-light">Let's learn new tech today!</p>
						</div>
						@* SVG Image *@
						<img src="~/images/element/login-victor.svg" class="mt-5" alt="">
					</div>
				</div>

				@* Right *@
				<div class="col-12 col-lg-6 m-auto">
					<div class="row my-5">
						<div class="col-sm-10 col-xl-8 m-auto">
							@* Title *@
							<h1 class="fs-2">Sign up for your account!</h1>
							<p class="lead mb-4">Nice to see you! Please Sign up with your account.</p>

							@* Form START *@
							<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
								<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
								@* Email *@
								<div class="mb-4">
									<label asp-for="Input.Email" class="form-label">Email address *</label>
									<div class="input-group input-group-lg">
										<span class="input-group-text bg-light rounded-start border-0 text-secondary px-3"><i class="bi bi-envelope-fill"></i></span>
										<input id="exampleInputEmail1" asp-for="Input.Email" type="email" class="form-control border-0 bg-light rounded-end ps-1" autocomplete="username" aria-required="true" placeholder="name@example.com" />
									</div>
									<span asp-validation-for="Input.Email" class="text-danger"></span>
								</div>
								@* Password *@
								<div class="mb-4">
									<label asp-for="Input.Password" class="form-label">Password *</label>
									<div class="input-group input-group-lg">
										<span class="input-group-text bg-light rounded-start border-0 text-secondary px-3"><i class="fas fa-lock"></i></span>
										<input asp-for="Input.Password" type="password" class="form-control border-0 bg-light rounded-end ps-1" autocomplete="current-password" aria-required="true" placeholder="password" id="inputPassword5">
									</div>
									<div id="passwordHelpBlock" class="form-text">
										Your password must be 8 characters at least
									</div>
									<span asp-validation-for="Input.Password" class="text-danger"></span>
								</div>
								@* Confirm Password *@
								<div class="mb-4">
									<label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password *</label>
									<div class="input-group input-group-lg">
										<span class="input-group-text bg-light rounded-start border-0 text-secondary px-3"><i class="fas fa-lock"></i></span>
										<input asp-for="Input.ConfirmPassword" type="password" class="form-control border-0 bg-light rounded-end ps-1" autocomplete="current-password" aria-required="true" placeholder=" Confirm password" id="inputPassword5">
									</div>
									<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
								</div>
								@* Button *@
								<div class="align-items-center mt-0">
									<div class="d-grid">
										<button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
									</div>
								</div>
							</form>
							@* Form END *@
							@* Sign up link *@
							<div class="mt-4 text-center">
								<span>Already have an account? <a asp-page="./Login">Sign in here</a></span>
							</div>
						</div>
					</div> @* Row END *@
				</div>
			</div> @* Row END *@
		</div>
	</section>
</main>
@* **************** MAIN CONTENT END **************** *@

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
