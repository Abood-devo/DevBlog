@page
@model devBlog.Pages.BlogPosts.DeleteModel

@{
    ViewData["Title"] = "Delete";
}


<div class="text-center">
    <h1>Delete Blog Post</h1>
</div>

<hr />

<div class="container">
    <div class="d-flex justify-content-center">
        @* Card item START *@
        <div class="col-sm-6 col-lg-4 grid-item">
            <div class="card bg-transparent">
                <div class="overflow-hidden rounded-3">
                    <img src="@Model.BlogPost.CoverPhotoUrl" class="card-img" alt="course image">
                    @* Overlay *@
                    <div class="bg-overlay bg-dark opacity-1"></div>
                    <div class="card-img-overlay d-flex align-items-start p-3">
                        @* badge *@
                        <a href="#" class="badge text-bg-danger">Topic</a>
                    </div>
                </div>

                @* Card body *@
                <div class="card-body px-3">
                    @* Title *@
                    <h5 class="card-title"><a href="/blogposts/details?id=@Model.BlogPost.BlogPostID">@Model.BlogPost.Title</a></h5>
                    <p class="text-truncate-2">@Model.BlogPost.Description</p>
                    @* Info *@
                    <div class="d-flex justify-content-between">
                        <h6 class="mb-0"><a href="#">By @Model.BlogPost.Author</a></h6>
                        <span class="small">@Model.BlogPost.CreationDate</span>
                    </div>
                </div>
            </div>
        </div>
        @* Card item END *@
    </div>
    
    <hr />

    <p>Are you sure you want to delete this blog post?</p>

    <form method="post">
        <input type="hidden" asp-for="BlogPost.BlogPostID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>


